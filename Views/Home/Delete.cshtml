@model Contact01.Models.Contact

<h2>Delete Contact</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h5>@Model.FirstName @Model.LastName</h5>
    </div>

    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this contact?');">
        <input type="hidden" asp-for="ContactId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
    </form>
</div>
